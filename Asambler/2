#include <iostream>
#include <ctime>
using namespace std;

int main()
{
	srand(time(NULL));
	int a[10], min, imin;
	for (int i = 0; i < 10; i++) {
		a[i] = rand() % 20;
	}
	for (int i = 0; i < 10; i++)
		cout << a[i] << " ";


	_asm {
		cld

		lea esi, a
		mov ebx, dword ptr[esi]
		mov ecx, 10

		M1:
		lodsd
			cmp eax, ebx
			jge M2
			mov ebx, eax
		M2:
		loop M1
			mov min, ebx
			mov imin, ecx
	}
	cout << endl <<  "Min: " << min;
	cout << endl << "Index min: " << imin;
}
