#include <iostream>
#include<time.h>
using namespace std;

void sortpuz(int n, int* x)
{
	int i, temp, k = 0;
	for (int i = n - 1; i > 0; i--)
		for (int j = 0; j < i; j++)
		{
			if (x[j] > x[j + 1])
			{
				temp = x[j];
				x[j] = x[j + 1];
				x[j + 1] = temp;
				k += 3;
			}
			k++;
		}
	cout << "for n[" << n << "] = " << k << endl;
}

int main()
{
	srand(time(NULL));
	for (int n = 100; n <= 1000; n += 100)
	{
		cout << "Enter size mass: ";
		int* a = new int[n];
		for (int i = 0; i < n; i++)
			a[i] = rand() % 100;
		sortpuz(n, a);

	}
}
